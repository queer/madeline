<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%magenta(%d{HH:mm:ss.SSS})] [%yellow(%32.-32thread)] [%highlight(%8.-8level)] [%36.-36logger{36}] %highlight(%msg) %n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>